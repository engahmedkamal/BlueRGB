<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:screenOrientation="portrait"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/bt_color"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/seekBar1"
        android:layout_alignParentBottom="true"
        android:background="@color/aqua"
        android:text="@string/prev_lay"
        android:textColor="@color/blue" />

    <Button
        android:id="@+id/bt_effect"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@color/aqua"
        android:text="@string/more_effects"
        android:textColor="@color/blue" />

    <ToggleButton
        android:id="@+id/power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/my_btn_toggle" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/White" />

    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/power"
        android:max="7" />

    <Button
        android:id="@+id/btn_red"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/w3"
        android:layout_toLeftOf="@+id/w3"
        android:background="@drawable/red_btn" />

    <Button
        android:id="@+id/g3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/btn_blue"
        android:layout_alignTop="@+id/w3"
        android:background="@color/b2" />

    <Button
        android:id="@+id/b3"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/btn_red"
        android:layout_below="@+id/btn_red"
        android:background="@color/orangeStrong" />

    <Button
        android:id="@+id/w3"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/btn_green"
        android:layout_alignTop="@+id/bt_color"
        android:background="@color/g2" />

    <Button
        android:id="@+id/r4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/g3"
        android:layout_alignBottom="@+id/g3"
        android:layout_toRightOf="@+id/g3"
        android:background="@color/p" />

    <Button
        android:id="@+id/r3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/r4"
        android:layout_alignLeft="@+id/r4"
        android:background="@color/White" />

    <Button
        android:id="@+id/btn_blue"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/g3"
        android:layout_toRightOf="@+id/w3"
        android:background="@drawable/blue_btn" />

    <Button
        android:id="@+id/btn_green"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/b3"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/textView1"
        android:background="@drawable/green_btn" />

</RelativeLayout>